<h2>{{ 'Dodaj nowy kiepski film' | trans }}</h2>
<form method="POST" action="{{ path('app_movie_createmovie') }}">
	<table>
		<tr><th>{{ 'Tytuł' | trans}}:</th>
			<td><input type="text" name="title" /></td>
		</tr>
                <tr><th>{{ 'Rok produkcji' | trans}}:</th>
			<td><input type="integer" name="year_of_production" /></td>
                </tr>
		<tr><th>{{ 'Reżyser' | trans}}:</th>
			<td><input type="text" name="director" /></td>
                </tr>
                <tr><th>{{ 'Gatunek' | trans}}:</th>
			<td><input type="text" name="genre" /></td>
		</tr>
		<tr><th>{{ 'Ocena' | trans}}:</th>
			<td><input type="decimal" name="rating" /></td>
		</tr>
		<tr><th>{{ 'Opis' | trans}}:</th>
			<td><textarea name="description"></textarea></td>
		</tr>
		<tr><td colspan="2"><input type="submit" /></td></tr>
	</table>
</form>